# For examples
# https://docs.ansible.com/ansible/latest/collections/awx/awx/workflow_job_template_module.html#ansible-collections-awx-awx-workflow-job-template-module
# https://docs.ansible.com/ansible/latest/collections/awx/awx/workflow_job_template_node_module.html#ansible-collections-awx-awx-workflow-job-template-node-module
ansible_tower_config:
  default: 
    workflow_job_templates: 
      DEVOPS_splunk_on_prem_update_index_London_prod: &DEVOPS_splunk_on_prem_update_index_London_prod        
        description: Pushes Splunk configuration to the on prem cluster in London  
        organization: DEVOPS
      DEVOPS_splunk_on_prem_update_index_Singapore_prod: &DEVOPS_splunk_on_prem_update_index_Singapore_prod        
        description: Pushes Splunk configuration to the on prem cluster in Singapore  
        organization: DEVOPS
  prd:
    workflow_job_templates:
      DEVOPS_splunk_on_prem_update_index_London_prod:
        <<: *DEVOPS_splunk_on_prem_update_index_London_prod 
      DEVOPS_splunk_on_prem_update_index_Singapore_prod:
        <<: *DEVOPS_splunk_on_prem_update_index_Singapore_prod 
    workflow_nodes:
      03_DEVOPS_ansible_unix_inventory_git:
        unified_job_template: DEVOPS_ansible_unix_inventory_git
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_London_prod
        success_nodes: [02_DEVOPS_splunk_on_prem_update_index_London_NODES]            
      02_DEVOPS_splunk_on_prem_update_index_London_NODES:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_London_NODES
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_London_prod
        success_nodes: [01_DEVOPS_splunk_on_prem_update_index_London_MANAGER]
      01_DEVOPS_splunk_on_prem_update_index_London_MANAGER:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_London_MANAGER
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_London_prod
      03_DEVOPS_ansible_unix_inventory_git_Singapore:
        unified_job_template: DEVOPS_ansible_unix_inventory_git
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_prod
        success_nodes: [02_DEVOPS_splunk_on_prem_update_index_Singapore_NODES]            
      02_DEVOPS_splunk_on_prem_update_index_Singapore_NODES:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_NODES
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_prod
        success_nodes: [01_DEVOPS_splunk_on_prem_update_index_Singapore_MANAGER]
      01_DEVOPS_splunk_on_prem_update_index_Singapore_MANAGER:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_MANAGER
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_prod           
  dev: 
    workflow_job_templates:
      DEVOPS_splunk_on_prem_update_index_London_prod:
        <<: *DEVOPS_splunk_on_prem_update_index_London_prod     
      DEVOPS_splunk_on_prem_update_index_Singapore_prod:
        <<: *DEVOPS_splunk_on_prem_update_index_Singapore_prod         
    workflow_nodes:
      03_DEVOPS_ansible_unix_inventory_git:
        unified_job_template: DEVOPS_ansible_unix_inventory_git
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_London_prod
        success_nodes: [02_DEVOPS_splunk_on_prem_update_index_London_NODES]            
      02_DEVOPS_splunk_on_prem_update_index_London_NODES:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_London_NODES
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_London_prod
        success_nodes: [01_DEVOPS_splunk_on_prem_update_index_London_MANAGER]
      01_DEVOPS_splunk_on_prem_update_index_London_MANAGER:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_London_MANAGER
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_London_prod              
      03_DEVOPS_ansible_unix_inventory_git_Singapore:
        unified_job_template: DEVOPS_ansible_unix_inventory_git
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_prod
        success_nodes: [02_DEVOPS_splunk_on_prem_update_index_Singapore_NODES]            
      02_DEVOPS_splunk_on_prem_update_index_Singapore_NODES:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_NODES
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_prod
        success_nodes: [01_DEVOPS_splunk_on_prem_update_index_Singapore_MANAGER]
      01_DEVOPS_splunk_on_prem_update_index_Singapore_MANAGER:
        unified_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_MANAGER
        workflow_job_template: DEVOPS_splunk_on_prem_update_index_Singapore_prod              

 

     
