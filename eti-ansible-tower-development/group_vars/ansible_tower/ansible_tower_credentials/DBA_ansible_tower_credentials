# https://docs.ansible.com/ansible/latest/collections/awx/awx/credential_module.html#ansible-collections-awx-awx-credential-module

ansible_tower_config:
  default:
    credentials: &default_credentials
      VAULT_DBA_rubrik_backups:
        credential_type: Vault
        organization: DBA
        inputs:
          vault_password: '{{ rubrik_backups_vault }}'
      MACHINE_DBA_z_rubrikbackup_prd:
        credential_type: Machine
        organization: DBA
        inputs:
          username: z_rubrikbackup_prd
          ssh_key_data: '{{ z_rubrikbackup_prd }}'      
  prd:
    credentials:
      <<: *default_credentials
  dev:
    credentials:
      <<: *default_credentials
  c_b:
    credentials:
      <<: *default_credentials
