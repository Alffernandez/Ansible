          ssh_key_data: '{{ git_private_keys.GIT_euc_ansible_playbooks }}'
      VAULT_EUC_ansible_playbooks:
        credential_type: Vault
        organization: STORAGE
        inputs:
          vault_password: '{{ VAULT_EUC_ansible_playbooks }}'
      MACHINE_EUC_z_onedriveperm_prd:
        credential_type: Machine
        organization: EUC
        inputs:
          username: z_OneDrivePerm_prd
          password: '{{ MACHINE_EUC_z_OneDrivePerm_prd }}'
  prd:
    credentials:
